      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "onchange": "^6.0.0",
    "prettier": "1.18.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": "10.16.0"
  },
  "dependencies": {
    "env-cmd": "^9.0.3",
    "ts-node": "^8.3.0"
  }
}
