{
  "name": "typescript-course",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/digzit/typescript-course.git",
  "author": "Digzit <aurelien.digout@gmail.com>",
  "scripts": {
    "api": "cd api && yarn dev",
    "prettier-watch": "onchange '**/*.ts' -- prettier --write {{changed}}"
  },
  "lint-staged": {
    ".ts": [
      "tslint --fix",
      "git add"
    ]
  },
